{
  "compilerOptions": {
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,

    // "module": "commonjs",
    // ensures output is ESM
    // "module": "es2020",
    // "module": "es2022",
    "module": "esnext",

    // both "node16" and "nodenext" cause an error esm import
    // "moduleResolution": "node16"
    // "moduleResolution": "nodenext"
    "moduleResolution": "node",

    // support modern features like private identifiers
    // "target": "es2017",
    // "target": "es2020",
    "target": "es2022",

    "esModuleInterop": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
